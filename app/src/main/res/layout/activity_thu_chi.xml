<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    tools:context="com.example.nguyenthanhxuan.quanlychitieubaocao.ThuChiMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/imgadd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#075b57"
            android:background="#26efc1"
            android:padding="10dp"
            android:text="Thêm Các Khoản Thu Chi Cá Nhân" />
        <Button
            android:id="@+id/quit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#ffbabf"
            android:background="#c91818"
            android:padding="10dp"
            android:text="Thoát" />

    </LinearLayout>

</LinearLayout>